# Screenshots
bindsym --release Print exec "scrot -m '/home/sm/Pictures/screenshots/%s_%H%M_%d.%m.%Y_$wx$h.png'"
bindsym --release Shift+Print exec "scrot -s '/home/sm/Pictures/screenshots/%s_%H%M_%d%m%Y_$wx$h.png'"
bindsym --release $mod+Shift+Print exec "scrot -u -d 4 '/home/sm/Pictures/screenshots/%s_%H%M_%d%m%Y_$wx$h.png'"

# Compton for transparency
exec --no-startup-id compton -b -c -f

# For network manager
exec --no-startup-id nm-applet

# For i3 lock
bindsym $MOD+SHIFT+x exec i3lock -d -c 000000

# For setting screen resolution manually
# Refer: https://superuser.com/questions/1111788/i3-how-to-save-background-and-screen-resolution
exec --no-startup-id xrandr --output DP2 --mode 1600x900
